{
  "identifier": "mobile-default",
  "description": "Capability for the main window on mobile",
  "platforms": [
    "android",
    "iOS"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "notification:default",
    "os:default",
    "fs:allow-read",
    "fs:allow-write",
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$APPDATA/audion/**"
        },
        {
          "path": "$AUDIO/**"
        },
        {
          "path": "$MUSIC/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$AUDIO/**"
        },
        {
          "path": "$APPDATA/audion/**"
        },
        {
          "path": "$MUSIC/**"
        },
        {
          "path": "$HOME/Music/**"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$AUDIO/**"
        },
        {
          "path": "$APPDATA/audion/**"
        },
        {
          "path": "$MUSIC/**"
        },
        {
          "path": "$HOME/Music/**"
        },
        {
          "path": "/storage/emulated/0/**"
        },
        {
          "path": "/sdcard/**"
        }
      ]
    }
  ]
}
