{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audion (KoolArpan)",
  "version": "1.2.1",
  "identifier": "com.audion.koolarpan.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Audion (KoolArpan)",
        "width": 1280,
        "height": 800,
        "minWidth": 1280,
        "minHeight": 800,
        "backgroundColor": "#121212",
        "visible": true,
        "decorations": false,
        "resizable": true,
        "maximized": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' blob: asset: http://asset.localhost https://asset.localhost; connect-src * asset: http://asset.localhost https://asset.localhost; img-src 'self' data: blob: asset: http://asset.localhost https://asset.localhost http: https:; media-src 'self' asset: http://asset.localhost https://asset.localhost file: blob: http: https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/.local/share/com.audion.koolarpan.app/**",
          "$HOME/.local/share/**",
          "$APPDATA/**",
          "$AUDIO/**",
          "$MUSIC/**",
          "**"
        ]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {}
}
